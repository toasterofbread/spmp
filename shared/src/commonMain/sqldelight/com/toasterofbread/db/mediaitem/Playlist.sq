updateYearById: UPDATE Playlist SET year = :year WHERE id == :id;

artistById: SELECT artist FROM Playlist WHERE id == :id;
updateArtistById: UPDATE Playlist SET artist = :artist WHERE id == :id;

ownerById: SELECT owner FROM Playlist WHERE id == :id;
